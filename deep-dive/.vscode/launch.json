{
    // when you press F5, vs code first run `launch`, then run `attach`
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node2",
            "request": "launch", //executed per `F5`
            "name": "Launch Program",
            "program": "${workspaceRoot}/node_modules/babel-cli/bin/babel-node.js",
            "stopOnEntry": true,
            "sourceMaps": true,
            "args": [
                "${workspaceRoot}/server.js"
            ],
             "port": 9229
        },
        {
            "type": "node2",  //must be `node2` for chrome debugger protocal ; `node` for v8 deubgging
            "request": "attach",
            "name": "Attach to Process",
            "port": 9229
        }
    ]
}